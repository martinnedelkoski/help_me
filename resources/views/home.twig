{% extends "layouts.default" %}

{% block body %}
    <!-- Preloader -->
    <div id="preloader">
        <div id="status"></div>
    </div>

    <!-- FullScreen -->
    <div class="intro-header">
        <div class="col-xs-12 text-center abcen1">
            <h1 class="h1_home wow fadeIn" data-wow-delay="0.4s">Help Me</h1>
            <h3 class="h3_home wow fadeIn" data-wow-delay="0.6s">Ask us and get the answers you need</h3>
            {%  if not user %}
                <ul class="list-inline intro-social-buttons">
                    <li>
                        <a href="{{ route("users.register-form") }}" class="btn  btn-lg mybutton_cyano wow fadeIn" data-wow-delay="0.8s"><span class="network-name">Register</span></a>
                    </li>
                    <li id="download" >
                        <h1>{{ user.getName() }}</h1>
                        <a data-toggle="modal" data-target="#login-modal" class="btn btn-lg mybutton_standard wow swing wow fadeIn" data-wow-delay="1.2s"><span class="network-name">Log In</span></a>
                        {% include 'users/login-modal.twig' %}
                    </li>
                </ul>
            {% endif %}
            <a class="wow bounceInUp" data-wow-duration="1.5s"  href="{{ route('topics.show', topic.getId()) }}">
                <label style="color: white; margin-top: 5%">Most commented topic:</label>
                <h3 class="h3_home wow fadeIn" data-wow-delay="0.6s" style="color: white">{{ topic.getTitle() }} </h3>
            </a>
        </div>
        <!-- /.container -->
    </div>



    <!-- JavaScript -->
    <script src="js/jquery-1.10.2.js"></script>
    <script src="js/bootstrap.js"></script>
    <script src="js/owl.carousel.js"></script>
    <script src="js/script.js"></script>
    <!-- StikyMenu -->
    <script src="js/stickUp.min.js"></script>
    <script type="text/javascript">
        jQuery(function($) {
            $(document).ready( function() {
                $('.navbar-default').stickUp();

            });
        });

    </script>
    <!-- Smoothscroll -->
    <script type="text/javascript" src="js/jquery.corner.js"></script>
    <script src="js/wow.min.js"></script>
    <script>
        new WOW().init();
    </script>
    <script src="js/classie.js"></script>
    <script src="js/uiMorphingButton_inflow.js"></script>
    <!-- Magnific Popup core JS file -->
    <script src="js/jquery.magnific-popup.js"></script>

{% endblock %}